Aim:To implement memory management operator

program:
#include <iostream>
using namespace std;

int main() {
    // Using new operator to allocate memory dynamically
    int *ptr = new int;          // Allocate memory for single integer
    int *arr = new int[5];       // Allocate memory for array of 5 integers

    // Storing values
    *ptr = 100;
    cout << "Value stored in ptr: " << *ptr << endl;

    cout << "Enter 5 elements for the array:" << endl;
    for (int i = 0; i < 5; i++) {
        cin >> arr[i];
    }

    cout << "\nArray elements are:" << endl;
    for (int i = 0; i < 5; i++) {
        cout << arr[i] << " ";
    }

    // Using delete operator to free memory
    delete ptr;     // Free single allocated memory
    delete[] arr;   // Free array memory

    cout << "\n\nMemory freed successfully!" << endl;

    return 0;
}

