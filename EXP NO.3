#include <iostream>
using namespace std;

class Employee {
private:
    string name;
    int id;
    float basicPay, da, hra, gross, tax, netSalary;

public:
    void getData() {
        cout << "Enter Employee Name: ";
        getline(cin, name);
        cout << "Enter Employee ID: ";
        cin >> id;
        cout << "Enter Basic Pay: ";
        cin >> basicPay;

        // Calculations
        da = basicPay * 0.70;      // 70%
        hra = basicPay * 0.10;     // 10%
        gross = basicPay + da + hra;
        tax = gross * 0.20;        // 20%
        netSalary = gross - tax;
    }

    void displayData() {
        cout << "\n------ Employee Payslip ------\n";
        cout << "Employee Name   : " << name << endl;
        cout << "Employee ID     : " << id << endl;
        cout << "Basic Pay       : " << basicPay << endl;
        cout << "DA (70%)        : " << da << endl;
        cout << "HRA (10%)       : " << hra << endl;
        cout << "Gross Salary    : " << gross << endl;
        cout << "Tax (20%)       : " << tax << endl;
        cout << "Net Salary      : " << netSalary << endl;
        cout << "----------------------------------\n";
    }
};

int main() {
    Employee e;
    e.getData();
    e.displayData();
    return 0;
}
