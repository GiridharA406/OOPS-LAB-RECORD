program:
#include <iostream>
using namespace std;

class Addition {
public:
    // Function with 2 integers
    int add(int a, int b) {
        return a + b;
    }

    // Function with 3 integers (Overloaded function)
    int add(int a, int b, int c) {
        return a + b + c;
    }

    // Function with float values (Different data type)
    float add(float a, float b) {
        return a + b;
    }
};

int main() {
    Addition obj;

    cout << "Addition of 2 integers: " << obj.add(10, 20) << endl;
    cout << "Addition of 3 integers: " << obj.add(10, 20, 30) << endl;
    cout << "Addition of 2 floats: " << obj.add(5.5f, 2.3f) << endl;

    return 0;
}

