#include <iostream>
using namespace std;

class Shape {
public:
    // Virtual function
    virtual void draw() {
        cout << "Drawing a Shape" << endl;
    }
};

class Circle : public Shape {
public:
    void draw() {
        cout << "Drawing a Circle" << endl;
    }
};

class Rectangle : public Shape {
public:
    void draw() {
        cout << "Drawing a Rectangle" << endl;
    }
};

int main() {
    Shape *ptr;

    Circle c;
    Rectangle r;

    ptr = &c;
    ptr->draw();  // Calls Circle's draw()

    ptr = &r;
    ptr->draw();  // Calls Rectangle's draw()

    return 0;
}

